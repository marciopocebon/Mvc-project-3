            <br />
            <fieldset>
                <legend style="font-family:'Roboto',sans-serif">
                    Imagen
                </legend>
                    <div class="carousel-inner">
                        @{int foto = 1;}
                        @foreach (var item in Model)
                        {
                            if (item.Activo)
                            {

                                if (foto != 1)
                                {
                                    <div class="item">  <a class="imagen"><img class="imgen" alt="carousel image" onclick="openModal();currentSlide(@foto)" src="@Url.Content(item.PathImg)"></a> </div>
                                    foto++;
                                }
                                if (foto == 1)
                                {
                                    <div class="item active">  <a class="img-responsive"><img class="imgen" alt="carousel image" onclick="openModal();currentSlide(@foto)" src="@Url.Content(item.PathImg)"></a> </div>
                                    foto++;
                                }
                            }
                        }


                    </div>

                    <div class="col-sm-12">
                        <div class="pull-right">
                            <button style="margin-bottom:2%;margin-top:10%;background-color:#2e2929;height:100%;width:auto" type="submit" class="btn btn-raised btn-inverse">Guardar<span class="md-ripple"></span></button>
                        </div>


                    </div>

            </fieldset>
