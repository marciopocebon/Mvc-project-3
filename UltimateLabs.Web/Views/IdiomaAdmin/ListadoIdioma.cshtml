@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<UltimateLabs.Web.Models.IdiomasAdminViewModel>

@{
    ViewBag.Title = "ListadoIdioma";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}
<head>
    <link rel="stylesheet" href="maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Charmonman|Roboto" rel="stylesheet">
    @Styles.Render("~/Content/CSS/Styles.css")
</head>

<section>
    @using (Html.BeginForm("ListadoIdioma", "IdiomaAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="contenedor col-sm-5 m-bottom-5 m-top-5percent m-left-2percent bg-white">
            <fieldset class="padding-top-bottom">
                <legend class="tituloListado m-top-5" style="font-family:'Roboto',sans-serif;font-size:xx-large">
                    Listado
                </legend>

                <div class="panel" id="panelDemo9">

                    <div class="form-group">

                        <table id="tblContact" class="table-datatable table table-striped table-hover mv-lg dataTable custom-Table" data-page-size="6" data-first-text="FIRST" data-next-text="NEXT" data-previous-text="PREVIOUS" data-last-text="LAST">
                            <thead class="customThead">
                                <tr class="tr-title">
                                    <th style="color:white;font-family:'Roboto',sans-serif">Idioma</th>
                                    <th style="color:white;font-family:'Roboto',sans-serif"></th>
                                    <th style="color:white;font-family:'Roboto',sans-serif">Acción</th>
                                </tr>
                                <tr>
                                    <th width="auto">
                                        <input type="text" class="form-control" id="BuscarProducto" onkeyup="javascript:Filtrar()" placeholder="Buscar Idioma" />
                                    </th>
                                    <th>

                                    </th>

                                    <th width="auto" align="center">

                                    </th>


                                </tr>
                            </thead>
                            @if (Model != null)
                            {
                                <tbody>
                                    @foreach (var data in Model)
                                    {
                                        <tr class="target">
                                            <td style="font-family:'Roboto',sans-serif;height:60%">
                                                @Html.DisplayFor(modelItem => data.Idioma)
                                            </td>
                                            <td></td>
                                            <td>

                                                <button style="background-color:#2e2929" class="btn btn-inverse ripple " onclick="Inactivar(@data.IdIdioma)" type="button" id="btnEliminar"
                                                        data-toggle="tooltip" data-placement="top" title="Eliminar Idioma">
                                                    <span>
                                                        <img src="/Content/Template/Imagenes/Icons/delete-white.png">
                                                    </span>
                                                </button>
                                                <button style="background-color:#02779d" class="btn ripple" onclick="location.href='@Url.Action("indexeditar", "IdiomaAdmin", new { id = data.IdIdioma })'" type="button" id="btnEditar"
                                                        data-toggle="tooltip" data-placement="top" title="Editar Idioma">
                                                    <span>
                                                        <img src="/Content/Template/Imagenes/Icons/lead-pencil-white.png">
                                                    </span>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            }


                        </table>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @if (Model != null)
                                {
                                    @Html.PagedListPager(Model,
                                              page => Url.Action("Index", new { page }));
                                }
                            </div>
                        </div>

                    </div>
                </div>

            </fieldset>
        </div>

    }

</section>

<script language="javascript" type="text/javascript">
    function Inactivar(_cod) {

        swal({

            title: "Eliminar Idioma",
            text: "¿Está seguro que desea eliminar este idioma?",
            type: "warning",
            cancelButtonText: "No",
            showCancelButton: true,
            closeOnConfirm: false,
            confirmButtonText: "Si",
            showLoaderOnConfirm: true
        },
            function () {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("Inactivar")',
                    contentType: "application/json",
                    data: { id: _cod},
                    complete: function (data) {
                        if (data.readyState === 4) {

                            swal({
                                title: "Idioma eliminado correctamente",
                                type: "success",
                                closeOnConfirm: false,
                                showLoaderOnConfirm: true
                            },
                                function () {
                                    location.reload();
                                }
                            );
                        }
                    },



                });
            }
        );

    }
</script>


<script>
    function Prueba() {
        $.ajax({
            url: Ordenar(),
            success: function () {
                Filtrar();
            }
        })
    }

    function Filtrar() {
        var input = document.getElementById("BuscarProducto");
        var filter = input.value.toLowerCase();
        var nodes = document.getElementsByClassName("target");

        for (i = 0; i < nodes.length; i++) {
            if (nodes[i].innerText.toLowerCase().includes(filter)) {
                nodes[i].style.display = "";
            } else {
                nodes[i].style.display = "none";
            }
        }
    }

    function Ordenar() {
        pageSize = 9;

        $("#pagin").find('li').remove();
        var pageCount = Math.ceil($(".line-content").size() / pageSize);

        for (var i = 0; i < pageCount; i++) {
            if (i == 0)
                $("#pagin").append('<li><a class="current" href="#">' + (i + 1) + '</a></li>');
            else
                $("#pagin").append('<li><a href="#">' + (i + 1) + '</a></li>');
        }


        showPage(1);

        $("#pagin li a").click(function () {
            $("#pagin li a").removeClass("current");
            $(this).addClass("current");
            showPage(parseInt($(this).text()))
        });



        showPage = function (page) {
            $(".line-content").hide();

            $(".line-content").each(function (n) {
                if (n >= pageSize * (page - 1) && n < pageSize * page)
                    $(this).show();
            });

        }
    }

    function OrdenarFiltro() {
