@model UltimateLabs.Web.Models.ConfiguracionesAdminViewModel

@Scripts.Render("~/bundles/jqueryval")
@Styles.Render("~/ThemeAdmin/css")
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<head>
    <link rel="stylesheet" href="maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Charmonman|Roboto" rel="stylesheet">
    @Styles.Render("~/Content/CSS/Styles.css")

</head>

<section>
    @using (Html.BeginForm("EditarGeneral", "ConfiguracionGeneralAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        @Html.AntiForgeryToken()

    <div class="col-sm-5 contenedor" style="margin-left:2%;margin-top:5%;background-color:white">
        <fieldset>
            <legend style="font-family:'Roboto',sans-serif">
                Editar
            </legend>
            <div class="col-sm-12">
                @Html.Label("Código", new { @class = "col-sm-12 control-label labelText" })
                <div class="col-sm-12">
                    @Html.TextAreaFor(x => x.CodigoConfiguracion, new { @class = "form-control m-bottom-5", @id = "valor" })
                    @Html.ValidationMessageFor(x => x.CodigoConfiguracion, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-12">
                @Html.Label("Nombre", new { @class = "col-sm-12 control-label labelText" })
                <div class="col-sm-12">
                    @Html.TextAreaFor(x => x.NombreConfiguracion, new { @class = "form-control m-bottom-5", @id = "valor" })
                    @Html.ValidationMessageFor(x => x.NombreConfiguracion, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-12">
                @Html.Label("Descripción", new { @class = "col-sm-12 control-label labelText" })
                <div class="col-sm-12">
                    @Html.TextAreaFor(x => x.DescripcionConfiguracion, new { @class = "form-control m-bottom-5", @id = "valor", @rows = "7" })
                    @Html.ValidationMessageFor(x => x.DescripcionConfiguracion, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-12">
                @Html.Label("Valor", new { @class = "col-sm-12 control-label labelText" })
                <div class="col-sm-12">
                    @Html.TextAreaFor(x => x.Valor, new { @class = "form-control m-bottom-5", @id = "valor", @rows = "7" })
                    @Html.ValidationMessageFor(x => x.Valor, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-12">
                @Html.Label("Idioma", new { @class = "col-sm-12 control-label labelText" })
                <div class="col-sm-12">
                    @Html.DropDownListFor(x => x.IdIdioma, new SelectList(ViewBag.Idioma, "Value", "Text"), new { @class = "form-control-dropdown m-bottom-5" })
                    @Html.ValidationMessageFor(x => x.IdIdioma, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-12">
                @Html.Label("Imagen", new { @class = "col-sm-12 control-label labelText" })
                <div class="col-md-12">
                    <input type="file" id="Imagen" form-control" name="Imagen" onchange="jQuery(this).next('input').val(this.value);" accept=".xlsx,.xls,image/*,.doc, .docx.,.ppt, .pptx,.txt,.pdf" />
                    @Html.TextBoxFor(x => x.PathImg, new { @class = "form-control m-bottom-5", @readonly = "true" })
                </div>
            </div>
            <div class="col-sm-12" style=" height:1mm; width:1mm; padding:1mm 1mm 1mm 1mm">
                @Html.TextBoxFor(x => x.IdConfiguracion, new { style = "visibility:hidden;  height:1mm; width:1mm; padding:1mm 1mm 1mm 1mm", @class = "form-control", @id = "Password" })
            </div>

            <div class="col-sm-12">
                <div class="pull-right">
                    <button style="margin-bottom:2%;margin-top:5%;background-color:#2e2929;height:100%;width:auto" type="submit" class="btn btn-raised btn-inverse">Guardar<span class="md-ripple"></span></button>
                    <button style="margin-bottom:2%;margin-top:5%;background-color:#02779d;height:100%;width:auto" type="button" id="cancel" onclick="location.href='@Url.Action("IndexGeneral", "ConfiguracionGeneralAdmin")'" class="btn btn-raised btn-inverse">
                        Cancelar
                    </button>
                </div>
            </div>

        </fieldset>

    </div>
    }

</section>


